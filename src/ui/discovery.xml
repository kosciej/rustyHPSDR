<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <object class="GtkWindow" id="discovery_window">
    <property name="title">rustyHPSDR Discovery</property>
    <property name="default-width">800</property>
    <property name="default-height">200</property>
    <child>
      <object class="GtkBox" id="vbox">
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkListBox" id="list">
          </object>
        </child>
        <child>
          <object class="GtkBox" id="manual_box">
            <property name="orientation">horizontal</property>
            <property name="spacing">10</property>
            <property name="margin-top">10</property>
            <property name="margin-bottom">10</property>
            <child>
              <object class="GtkLabel" id="manual_label">
                <property name="label">Manual IP:</property>
              </object>
            </child>
            <child>
              <object class="GtkEntry" id="manual_ip_entry">
                <property name="placeholder-text">192.168.1.100</property>
                <property name="width-chars">15</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="add_manual_button">
                <property name="label">Add Manual</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="button_box">
            <property name="orientation">horizontal</property>
            <property name="halign">end</property>
            <child>
              <object class="GtkButton" id="rediscover_button">
                <property name="label">Rediscover</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="cancel_button">
                <property name="label">Cancel</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="start_button">
                <property name="label">Start</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
